<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:elevation="4dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp">


    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/bloodTypeTextView"
        android:layout_toEndOf="@+id/bloodTypeTextView"
        android:id="@+id/relativeLayout2">

        <TextView
            android:id="@+id/hospitalTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="XXXXXX Hospital"
            android:textSize="22dp"
            android:paddingRight="8dp"
            android:textStyle="bold"
            android:paddingBottom="8dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/responsesTextView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/timeLeftTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XXh XXm XXs remaining"
            android:textAlignment="gravity"
            android:paddingRight="8dp"
            android:textColor="#FF0000"
            android:layout_below="@+id/hospitalTextView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/responsesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:singleLine="true"
            android:text="XX responses needed"
            android:paddingRight="8dp"
            android:layout_below="@+id/timeLeftTextView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingBottom="8dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/bloodTypeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="B+"
        android:textAlignment="center"
        android:textSize="64dp"
        android:gravity="center"
        android:paddingRight="8dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/ColorPrimaryDark" />

</RelativeLayout>
